
<h2 class="tipoRegistro">Registrarse en CouchInn</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field tipoRegistro">
    <%= f.label :nombre, "Nombre" %><br />
    <%= f.text_field :nombre, placeholder: 'Ingrese su nombre' %>
  </div>

  <div class="field tipoRegistro">
    <%= f.label :apellido, "Apellido" %><br />
    <%= f.text_field :apellido, placeholder: 'Ingrese su apellido' %>
  </div>

  <div class="field tipoRegistro">
    <%= f.label :nombreUsuario, "Nombre de Usuario" %><br />
    <%= f.text_field :nombreUsuario, placeholder: 'Ingrese su nombre de usuario' %>
  </div>
  

  <div class="field tipoRegistro">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field tipoRegistro"> 
    <%= f.label :nacimiento, "Fecha de Nacimiento" %><br /> 
    <%= f.date_select :nacimiento, :order => [:day, :month, :year], :start_year => 1900, :end_year => Time.now.year %>
  </div>  

  <div class="field tipoRegistro">
    <%= f.label :nacionalidad, "Nacionalidad" %><br />
    <%= f.text_field :nacionalidad, placeholder: 'Ingrese su nacionalidad' %>
  </div>

  <div class="tipoRegistro">
    <%= f.label :masculino, "Sexo" %><br />
    <%= f.radio_button :masculino, true %> Masculino
  </div>
  <div class="tipoRegistro">
    <%= f.radio_button :masculino, false, :checked => true %> Femenino
  </div>

  <div class="field tipoRegistro">
    <%= f.label :password , "Contraseña"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field tipoRegistro">
    <%= f.label :password_confirmation , "Confirmar contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="tipoRegistro">
    <%= f.label :esPremium, "¿Quiere ser cuenta Premium?" %><br />
    <%= f.radio_button :esPremium, true %> Sí
  </div>
  <div class="tipoRegistro">
    <%= f.radio_button :esPremium, false, :checked => true %> No
  </div>

  <% seMuestra = (:esPremium == false) ? '': 'hidden' %>
  <% if (:esPremium== false) %>
    <h7>NO ES PREMIUM</h7>
  <% end %>

  <div class="actions tipoRegistro">
    <%= f.submit "Registrarme" %>
  </div>
<% end %>

  <div class="tipoRegistro">
    <%= render "devise/shared/links" %>
  </div>
