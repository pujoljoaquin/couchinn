<h2 class="tipoRegistroCentro">Iniciar sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   
    <p class="notice tipoRegistroCentro" style="color:red"><strong><%= notice %></p> 
    <p class="alert tipoRegistroCentro" style="color:red"><strong><%= alert %></p> 

  <div class="field tipoRegistroCentro">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, placeholder: 'Ingrese su email' %>
  </div>

  <div class="field tipoRegistroCentro">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field tipoRegistroCentro">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordarme" %>
    </div>
  <% end -%>

  <div class="actions tipoRegistroCentro">
    <%= f.submit "Iniciar sesión" %>
  </div>
<% end %>

<div class="tipoRegistroCentro">
<%= render "devise/shared/links" %>
</div>


