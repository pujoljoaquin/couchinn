
<table class = "table center">
	<tr>
		<th> Tipo de Couch </th>
		<th> Activo </th>
	</tr>
	<% CouchType.all.each do |tipo| %>
		
		<%  if (tipo.activo == true) %>
			<tr> 

				<td> <%= tipo.nombre %> </td>
				<td> <%= (tipo.activo) ? 'Si' : 'No' %> </td>
				<td>
					<p>
					<%= link_to "Modificar", edit_couch_type_path(tipo), class: 'btn btn-success btn-sm' %>   
					</p>
				</td>
			</tr>

		<%else%>
			
			<tr class="active"> 

				<td> <%= tipo.nombre %> </td>
				<td> <%= (tipo.activo) ? 'Si' : 'No' %> </td>
				<td>
					<p>
					<%= link_to "Modificar", edit_couch_type_path(tipo), class: 'btn btn-success btn-sm' %>   
					</p>
				</td>

			</tr>
		<%end%>
	<% end %>
	<% if CouchType.count == 0 %>
		<tr> <td colspan="3"> No hay tipos de Couch </td> </tr>
	<% end %>
