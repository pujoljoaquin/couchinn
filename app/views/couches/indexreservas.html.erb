<body>
	<center>
		<h1 style="color:#6B8E23;" class="text-center"> Mis reservas </h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
<table class = "table center">
	<tr>
		<th> Usuario </th>
		<th> Fecha de entrada </th>
		<th> Fecha de salida </th>
		<th> Estado </th>
		<th></th>
	</tr>


	<% @couch.reservas.all.each do |reserva| %>
		
		<tr>
			<td><p><%= reserva.user.nombre%>
				<%= reserva.user.apellido%></p>
			</td>

			<td> <%= reserva.inicio.day %>/<%= reserva.inicio.month %>/<%= reserva.inicio.year %> </td>
			<td> <%=reserva.fin.day %>/<%= reserva.fin.month %>/<%= reserva.fin.year %> </td>
			<td>
				<% if reserva.confirmada == true%> 
					Confirmada
				<%else%>
					Pendiente
				<%end%>
			</td>
			<td>
			<%if !reserva.confirmada%>
				<%= link_to "Aceptar", method: :aceptar, class: 'btn btn-success btn-sm' %>
				<%= link_to "Rechazar", method: :rechazar, class: 'btn btn-success btn-sm' %> 
			<%else%>
				<%= link_to "Cancelar", method: :cancelar, class: 'btn btn-success btn-sm' %>
			<%end%>
			</td>
		</tr>	

	<% end %>
	<% if @couch.reservas.count == 0 %>
		<tr> <td colspan="3"> No hay reservas para este couch </td> </tr>
	<% end %>
	<tr><td class="center-block" colspan="3"><%= link_to "AtrÃ¡s", :back, class: 'btn btn-success btn-sm' %></td></tr>

</table>
<div>
	<div>
	</center>
</body>